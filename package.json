{
  "name": "smart-healthcare-system",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for a smart healthcare system managing urban hospital operations",
  "main": "server.js",
  "scripts": {
    "preinstall": "cd Client && pnpm install || echo 'Frontend installation skipped'",
    "install:all": "pnpm install && pnpm run preinstall",
    "dev": "concurrently \"pnpm run dev:backend\" \"cd Client && pnpm run dev\"",
    "dev:backend": "nodemon server.js",
    "build:frontend": "cd Client && pnpm run build",
    "start:prod": "pnpm run build:frontend && pnpm run start",
    "start": "node server.js",
    "test": "jest --coverage",
    "test:frontend": "cd Client && pnpm test",
    "test:all": "pnpm test && pnpm run test:frontend",
    "seed:slots": "node scripts/seed-slots.mjs"
  },
  "keywords": [
    "healthcare",
    "express",
    "mongodb",
    "api"
  ],
  "author": "Your Name or Organization",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "fuse.js": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.6",
    "punycode": "^2.3.1",
    "react-big-calendar": "^1.19.4",
    "react-datepicker": "^8.7.0",
    "react-toastify": "^11.0.5",
    "stripe": "^14.21.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
